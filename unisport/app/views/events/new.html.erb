<h1>New Event</h1>

<%= form_for :event, url: events_path do |f| %>
  <p>
    <%= f.label :sport %><br>
    <%= f.text_field :sport %>
  </p>
 
  <p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :needed %><br>
    <%= f.number_field :needed %>
  </p>
 
  <p>
  	<%= f.label :additional_info %><br>
    <%= f.text_area :additional_info %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>